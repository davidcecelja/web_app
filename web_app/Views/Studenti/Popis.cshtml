@using web_app.Models
@model List<Student>
@{
    ViewBag.Title = "Popis studenata";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Popis</h2>
@Html.ActionLink("Kreiranje novog studenta", "Azuriraj")
<br />
<br />

@using (Html.BeginForm("Popis", "Studenti", FormMethod.Get))
 {
    <p>
        Naziv: @Html.TextBox("naziv")
        Spol: @Html.RadioButton("spol", "M") Muški 
        @Html.RadioButton("spol", "Z") Ženski 
        @Html.RadioButton("spol", "") Svi
        <input type="submit" value="Traži" />
    </p>
 }
@if (Model.Count == 0) 
{
    <p>Nema rezultata pretrage!</p>
}
<table border="1">
    <tr>
        <th>Id</th>
        <th>Prezime</th>
        <th>Ime</th>
        <th>Oib</th>
        <th>Redovan</th>
        <th>Detalji</th>
        <th>Ažuriranje</th>
        <th>Brisanje</th>
    </tr>
    @foreach (var student in Model)
    {
        <tr>
            <td>@student.Id</td>
            <td>@student.Prezime</td>
            <td>@student.Ime</td>
            <td>@student.Oib</td>
            <td>@Html.CheckBox("redovan", student.RedovanStudent)</td>
            <td>@Html.ActionLink("info", "Detalji", new { id = student.Id })</td>
            <td>@Html.ActionLink("Ažuriraj", "Azuriraj", new { id = student.Id })</td>
            <td>@Html.ActionLink("Izbriši", "Brisi", new { id = student.Id }) </td>
        </tr>
    }
</table>
